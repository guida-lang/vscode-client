{
  "name": "guida",
  "displayName": "Guida",
  "description": "Guida Language Extension for VS Code",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/guida-lang/vscode-client"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "guida",
        "aliases": [
          "Guida",
          "guida"
        ],
        "extensions": [
          ".guida"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/file-type.svg",
          "dark": "./images/file-type.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "guida",
        "scopeName": "source.guida",
        "path": "./syntaxes/guida.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "guida",
        "path": "./snippets.json"
      }
    ]
  }
}